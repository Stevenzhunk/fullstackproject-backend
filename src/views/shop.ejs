<%- contentFor('title') %> SHOP <%- contentFor('styles') %>

<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
/>
<link rel="stylesheet" href="../admin.css" />
<link rel="stylesheet" href="../index.css" />
<link rel="stylesheet" href="../css/variables.css" />
<link rel="stylesheet" href="../responsive.css" />
<link
  rel="shortcut icon"
  href="../img/branding/isotype.svg"
  type="image/x-icon"
/>

<%- contentFor('body') %>

<div class="container_shop">
  <aside class="aside_shop">
    <section class="shop_buscador">
      <div class="buscar">
        <label for="buscar" class="titulo_buscador">BUSCAR</label>
        <input
          type="text"
          name="buscar"
          id="buscar"
          class="placeholder_buscador"
          placeholder="item o categoria"
        />
      </div>
      <br />
      <div class="ordenar_por">
        <label for="ordenar" id="label-ordenar" class="titulo_buscador"
          >ORDENAR POR</label
        >
        <select class="placeholder_buscador" name="ordenar" id="ordenar">
          <option value="mayor-menor">Mayor a menor</option>
          <option value="menor-mayor">Menor a mayor</option>
          <option value="alfabetico">Alfabético</option>
        </select>
      </div>
      <br />
      <div class="precio">
        <p class="titulo_buscador">PRECIO</p>
      </div>
      <br />
      <div class="min_max">
        <label for="preciomin" id="label-preciomin">MIN</label>
        <!-- PENDIENTE: ver si no mando width del input al CSS -->
        <input
          type="number"
          name="preciomin"
          id="preciomin"
          value="0"
          class="placeholder_buscador"
        />
        <p>-</p>
        <label for="preciomax" id="label-preciomax">MAX</label>
        <input
          type="number"
          name="preciomax"
          id="preciomax"
          value="0"
          class="placeholder_buscador"
        />
      </div>
      <br />
      <div class="filtrar">
        <p class="titulo_buscador">FILTRAR</p>
        <br />
      </div>
      <div class="filtrar_seleccion">
        <input
          type="checkbox"
          name="filtrar"
          id="filtrar"
          class="my_checkbox"
          value="nuevos"
        />
        <label for="">NUEVOS</label>
        <br />
        <input
          type="checkbox"
          name="filtrar"
          id="filtrar"
          class="my_checkbox"
          value="ofertas"
        />
        <label for="">OFERTAS</label>
        <br />
        <input
          type="checkbox"
          name="filtrar"
          id="filtrar"
          class="my_checkbox"
          value="edespecial"
        />
        <label for="">EDICIÓN ESPECIAL</label>
        <br />
        <input
          type="checkbox"
          name="filtrar"
          id="filtrar"
          class="my_checkbox"
          value="favoritos"
        />
        <label for="">FAVORITOS</label>
      </div>
    </section>
  </aside>
  <main class="shop_main">
    <section class="shop">
      <ul class="shop_lista">
        <li>
          <% productos.forEach(card => { %> <%- include('partials/card.ejs', {
          card: card }) %> <% }) %>
        </li>
      </ul>
    </section>
  </main>
</div>

<%- contentFor('scripts') %>

<script src="../index.js"></script>
