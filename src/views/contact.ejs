/>

<link rel="stylesheet" href="/css/index.css" />
<link rel="stylesheet" href="/css/admin.css" />
<link rel="stylesheet" href="/css/responsive.css" />
<link rel="stylesheet" href="/css/variables.css" />
<link
  rel="shortcut icon"
  href="./img/branding/isotype.svg"
  type="image/x-icon"
/>

<%- contentFor('body') %>
<main class="main-register">
  <div>
    <h1 class="title-register">CONTACTO</h1>
    <p class="complete-register">
      Complete el formulario para poder contactarle
    </p>
    <div class="register-container">
      <form class="form-container" action="">
        <div class="user-register">
          <label for="name">Nombre:</label>
          <input
            type="text"
            class="borde_rojo input_texto input-register"
            name=""
            id=""
            placeholder="Jhon"
            value=""
          />
        </div>
        <div class="user-register">
          <label for="last-name">Apellido</label>
          <input
            type="text"
            class="borde_rojo input_texto input-register"
            name=""
            id=""
            placeholder="Doe"
            value=""
          />
        </div>
        <div class="user-register">
          <label for="Email">Email:</label>
          <input
            type="text"
            class="borde_rojo input_texto input-register"
            name=""
            id=""
            placeholder="johndoe@correo.com"
            value=""
          />
        </div>
        <div class="user-register">
          <label for="Email">Teléfono:</label>
          <input
            type="text"
            class="borde_rojo input_texto input-register"
            name=""
            id=""
            placeholder="1144553366"
            value=""
          />
        </div>
        <br />
        <br />
        <div class="message-register">
          <label for="message">Mensaje:</label>
          <textarea
            class="borde_rojo input_texto input-register message"
            name="message"
            id="message"
            placeholder="Escribe tu mensaje aquí..."
          ></textarea>
        </div>
        <br />
        <br />
        <div class="sumit-container">
          <input type="submit" class="boton_rojo input-button" value="Enviar" />
        </div>
      </form>
    </div>
  </div>
</main>

<%- contentFor('scripts') %>
<script src="../index.js"></script>
