<%- contentFor('title') %> Admin <%- contentFor('styles') %>

<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
/>
<link rel="stylesheet" href="../index.css" />
<link rel="stylesheet" href="../admin.css" />
<link rel="stylesheet" href="../responsive.css" />
<link rel="stylesheet" href="../css/variables.css" />
<link
  rel="shortcut icon"
  href="../img/branding/isotype.svg"
  type="image/x-icon"
/>

<%- contentFor('body') %>

<main class="main-admin">
  <div class="search-bar">
    <span class="material-symbols-outlined plus-symbol">search </span>
    <input
      type="search"
      size="60"
      max-size="auto"
      placeholder="código, nombre o categoria"
    />
  </div>
  <div class="titles-table">
    <div class="title-list-products">LISTADO DE PRODUCTOS</div>
    <div id="add">
      <div class="title-add">AGREGAR</div>
      <span>
        <a
          class="material-symbols-outlined plus-symbol"
          href="create.html"
          id="icon-add"
          >add</a
        >
      </span>
    </div>
  </div>
  <table class="table-body">
    <tr class="table-row">
      <th class="table-description">ID</th>
      <th class="table-description">Código</th>
      <th class="table-description">Nombre del producto</th>
      <th class="table-description">Categoria</th>
    </tr>
    <% productos.forEach(producto => { %> <%- include('partials/adminElement', {
    producto: producto }) %> <% }) %>
  </table>
</main>

<%- contentFor('scripts') %>
